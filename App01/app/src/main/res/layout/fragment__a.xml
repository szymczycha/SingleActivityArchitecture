<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#955050"
    android:layout_height="match_parent"
    tools:context=".Fragment_A">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FRAGMENT A"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="put data"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:id="@+id/fragment_a_editText"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_a_button"
            android:text="SEND DATA TO FRAGMENT B"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_a_label"
            android:textColor="@color/gray"
            android:textAlignment="center"/>
    </LinearLayout>


</FrameLayout>